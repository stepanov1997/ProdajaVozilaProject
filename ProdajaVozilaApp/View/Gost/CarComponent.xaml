<UserControl x:Class="ProdajaVozilaApp.View.Gost.CarComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProdajaVozilaApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="99" d:DesignWidth="70">
    <Border BorderBrush="Black" BorderThickness="3" CornerRadius="5">
        <StackPanel x:Name="Grid" Background="Transparent">
            <Image x:Name="Image" HorizontalAlignment="Center" VerticalAlignment="Top" MaxHeight="85"  Stretch="Fill"/>
            <TextBlock x:Name="Name" Background="WhiteSmoke" Margin="1" TextAlignment="Center" FontWeight="Bold" Height="16"></TextBlock>
            <TextBlock x:Name="Price" Background="WhiteSmoke" Margin="1" TextAlignment="Center" FontWeight="Bold" Height="16"></TextBlock>
        </StackPanel>
    </Border>

</UserControl>
