<UserControl x:Class="ProdajaPrepisVozila.View.CarComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProdajaPrepisVozila.View"
             mc:Ignorable="d" 
             d:DesignHeight="99" d:DesignWidth="70">
    <StackPanel x:Name="Grid" Background="WhiteSmoke">
        <Image x:Name="Image" HorizontalAlignment="Center" VerticalAlignment="Top" MaxHeight="90"  Stretch="Uniform"/>
        <TextBlock x:Name="Name" Background="Aqua" Margin="1" TextAlignment="Center" FontWeight="Bold" Height="16"></TextBlock>
        <TextBlock x:Name="Price" Background="Aqua" Margin="1" TextAlignment="Center" FontWeight="Bold" Height="16"></TextBlock>
    </StackPanel>
</UserControl>
